rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isVerifiedUser() {
      return request.auth != null && request.auth.token.email_verified == true;
    }
    function isModerator() {
      return request.auth != null
        && request.auth.token.email_verified == true
        && request.auth.token.email != null
        && exists(/databases/$(database)/documents/config/moderation)
        && request.auth.token.email in get(/databases/$(database)/documents/config/moderation).data.moderatorEmails;
    }
    function hasClaimEligibility(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.ageVerified == true
        || get(/databases/$(database)/documents/users/$(uid)).data.onboardingStep >= 2;
    }

    match /config/moderation {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if isVerifiedUser() && request.auth.uid == userId;

      match /threadIndex/{threadId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /drafts/{draftId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create, update, delete: if isVerifiedUser() && request.auth.uid == userId;
      }
    }

    match /publicUsers/{uid} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null
        && request.auth.uid == uid
        && request.resource.data.keys().hasOnly(['uid', 'username', 'displayName', 'displayNameLower', 'photoURL', 'updatedAt'])
        && request.resource.data.uid == uid
        && request.resource.data.username is string
        && request.resource.data.username.size() >= 3
        && request.resource.data.username.size() <= 20
        && request.resource.data.username.matches('^[a-z0-9]+$')
        && request.resource.data.displayName is string
        && request.resource.data.displayNameLower is string
        && request.resource.data.displayNameLower.matches('^[a-z0-9\\s@._-]+$');
      allow delete: if false;
    }

    match /threads/{threadId} {
      allow read: if request.auth != null && (
        // eigenaar van support thread
        resource.data.userUid == request.auth.uid
        // participants array (jouw code gebruikt "participants")
        || (resource.data.participants is list && request.auth.uid in resource.data.participants)
        // fallback als sommige docs "participantUids" gebruiken
        || (resource.data.participantUids is list && request.auth.uid in resource.data.participantUids)
        // moderators mogen alle support threads lezen
        || (isModerator() && (resource.data.type == "support" || threadId.matches("^support_")))
        // DM support
        || (resource.data.type == 'dm' && request.auth.uid in resource.data.participantUids)
      );
      allow create: if request.auth != null
        && (
          (request.resource.data.type == 'dm'
            && request.auth.uid in request.resource.data.participantUids
            && request.resource.data.participantUids.size() == 2
            && request.resource.data.dmKey is string
            && request.resource.data.dmKey.size() > 0)
          || (request.resource.data.type == 'support'
            && request.auth.uid == request.resource.data.userUid
            && request.resource.data.threadKey is string
            && request.resource.data.threadKey.matches('^(support|moderation)_.*')
            && request.resource.data.threadKey == threadId
            && request.resource.data.userMessageAllowance is int
            && request.resource.data.userMessageAllowance >= 0
            && request.resource.data.userMessageAllowance <= 1)
        );
      allow update: if request.auth != null
        && (
          (resource.data.type == 'dm'
            && request.auth.uid in resource.data.participantUids
            && request.resource.data.diff(resource.data).changedKeys().hasOnly(['updatedAt', 'lastMessageAt', 'lastMessageText', 'lastSenderUid']))
          || (resource.data.type == 'support'
            && (
              (request.auth.uid == resource.data.userUid
                && request.resource.data.diff(resource.data).changedKeys().hasOnly([
                  'updatedAt',
                  'lastMessageAt',
                  'lastMessagePreview',
                  'unreadForModerator',
                  'unreadForUser',
                  'userDisplayName',
                  'userDisplayNameLower',
                  'userPhotoURL',
                  'userUsername'
                ])
                && request.resource.data.userMessageAllowance == resource.data.userMessageAllowance
                && request.resource.data.userCanSend == resource.data.userCanSend)
              || (isModerator()
                && request.resource.data.diff(resource.data).changedKeys().hasOnly([
                  'updatedAt',
                  'lastMessageAt',
                  'lastMessagePreview',
                  'userMessageAllowance',
                  'userCanSend',
                  'unreadForModerator',
                  'unreadForUser'
                ])
                && request.resource.data.userMessageAllowance is int
                && request.resource.data.userMessageAllowance >= 0
                && request.resource.data.userMessageAllowance <= 1)
            ))
        );
      allow delete: if false;

      match /messages/{messageId} {
        allow read: if request.auth != null && (
          get(/databases/$(database)/documents/threads/$(threadId)).data.userUid == request.auth.uid
          || (
            get(/databases/$(database)/documents/threads/$(threadId)).data.participants is list
            && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participants
          )
          || (
            get(/databases/$(database)/documents/threads/$(threadId)).data.participantUids is list
            && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participantUids
          )
          || (isModerator() && (get(/databases/$(database)/documents/threads/$(threadId)).data.type == "support"
              || threadId.matches("^support_")))
          || (get(/databases/$(database)/documents/threads/$(threadId)).data.type == 'dm'
              && request.auth.uid in get(/databases/$(database)/documents/threads/$(threadId)).data.participantUids)
        );
        allow create: if request.auth != null
          && (
            (get(/databases/$(database)/documents/threads/$(threadId)).data.type == 'dm'
              && request.resource.data.senderUid == request.auth.uid
              && request.resource.data.type == 'text')
            || (get(/databases/$(database)/documents/threads/$(threadId)).data.type == 'support'
              && (
                (isModerator()
                  && request.resource.data.senderUid == request.auth.uid
                  && request.resource.data.senderRole == 'moderator')
                || (request.auth.uid == get(/databases/$(database)/documents/threads/$(threadId)).data.userUid
                  && (get(/databases/$(database)/documents/threads/$(threadId)).data.userCanSend == true
                    || get(/databases/$(database)/documents/threads/$(threadId)).data.userMessageAllowance > 0)
                  && request.resource.data.senderRole == 'user'
                  && request.resource.data.senderUid == request.auth.uid)
              )
            )
          )
          && request.resource.data.text is string
          && request.resource.data.text.size() <= 2000;
        allow update, delete: if false;
      }
    }

    match /reviewCases/{reviewCaseId} {
      allow read: if isModerator() || (request.auth != null && request.auth.uid == resource.data.userId);
      allow create, update, delete: if false;
    }

    match /uploads/{uploadId} {
      allow read: if isModerator() || (request.auth != null && request.auth.uid == resource.data.userId);
      allow create, update, delete: if false;
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if isVerifiedUser();
      allow update, delete: if isVerifiedUser() && request.resource.data.authorId == request.auth.uid;

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isVerifiedUser();
        allow update, delete: if isVerifiedUser() && request.auth.uid == resource.data.authorId;
      }

      match /likes/{userId} {
        allow read: if true;
        allow create, delete: if isVerifiedUser() && request.auth.uid == userId;
      }
    }

    match /contributors/{contributorId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isModerator()
        || (isSignedIn()
          && resource.data.claimedByUid == request.auth.uid
          && request.resource.data.diff(resource.data).changedKeys().hasOnly(['bio', 'displayName', 'socials'])
          && request.resource.data.claimedByUid == resource.data.claimedByUid
          && request.resource.data.status == resource.data.status
          && request.resource.data.mergedInto == resource.data.mergedInto);
      allow delete: if false;
    }

    match /contributorAliases/{aliasId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isModerator();
    }

    match /claimRequests/{requestId} {
      allow create: if isSignedIn()
        && request.resource.data.claimantUid == request.auth.uid
        && hasClaimEligibility(request.auth.uid);
      allow read: if isModerator()
        || (isSignedIn() && request.auth.uid == resource.data.claimantUid);
      allow update: if isModerator()
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(['status']);
      allow delete: if false;
    }

    match /claimVouches/{vouchId} {
      allow create: if isSignedIn()
        && request.resource.data.voterUid == request.auth.uid
        && request.resource.data.claimRequestId is string
        && request.auth.uid in get(/databases/$(database)/documents/claimRequests/$(request.resource.data.claimRequestId)).data.eligibleVoucherUids;
      allow read: if isModerator()
        || (isSignedIn() && request.auth.uid == resource.data.voterUid)
        || (isSignedIn()
          && request.auth.uid == get(/databases/$(database)/documents/claimRequests/$(resource.data.claimRequestId)).data.claimantUid);
      allow update, delete: if false;
    }

    match /claimInvites/{inviteId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn()
        && (isModerator() || request.auth.uid == resource.data.creatorUid);
      allow update: if isModerator();
      allow delete: if false;
    }
  }
}
